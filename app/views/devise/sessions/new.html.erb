<% provide(:title, "Log in") %>


<div class="container-fluid devise-container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-xs-12">
      <div class="well general-well">
        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "newSesForm" }) do |f| %>

          <% if alert %>
            <div class="alert alert-danger">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= alert %>
            </div>
          <% end %>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :email, "Email address *" %>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :password, "Password *" %>
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.button "LOGIN", class: 'btn btn-primary btn-block', data: { behavior: "new-session-submit", disable_with: "<i class='fa fa-spinner fa-spin'></i> LOGGING IN..."} %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
