<% provide(:title, "New Event") %>

<div class="container-fluid devise-container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well general-well">
        <h2>Create New Event</h2>
        <%= form_for(@event, html: { id: "newEvent"}, data: { behavior: "new-event-form"} ) do |f| %>

          <div class= "row">
            <div class="col-md-12">
              <%= render 'layouts/error_messages', object: f.object %>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :name, "Name *" %>
                <%= f.text_field :name, autofocus: true, placeholder: "e.g. Development team meeting", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :event_type, "Event type *" %>
                <%= f.text_field :event_type, placeholder: "e.g. Conference talk", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :host, "Host * (person or organization)" %>
                <%= f.text_field :host, placeholder: "e.g. John Smith ", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :start_date, "Start date *" %>
                <%= f.text_field :start_date, class: "form-control", data: { behavior: "event-start-date" } %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :end_date, "End date *" %>
                <%= f.text_field :end_date, class: "form-control", data: { behavior: "event-end-date" } %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :guest_list, "Guest List *" %>
                <%= f.text_field :guest_list, placeholder: "e.g. Peter Parker, Tiffany Tailor", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :location, "Location *" %>
                <%= f.text_field :location, placeholder: "e.g. 1 Hacker Way, Palo Alto, 94303", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :message, "Extra info" %>
                <%= f.text_area :message, rows: "3", placeholder: "e.g. Bring your laptop with you", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.button "Save Event", class: 'btn btn-primary btn-block', data: { behavior: "event-submit-button", disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving Event..." } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>